<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="#33ff0000"
    android:columnCount="5"
    android:padding="5dp">

    <Button
        android:id="@+id/btn_show_address"
        android:layout_width="@dimen/people_menu_button"
        android:layout_height="@dimen/people_menu_button"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/selector_people_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_show_work_place"
        android:layout_width="@dimen/people_menu_button"
        android:layout_height="@dimen/people_menu_button"
        android:layout_marginRight="5dp"
        android:background="@drawable/selector_people_workplace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/h1" />

    <Button
        android:id="@+id/btn_show_home"
        android:layout_width="@dimen/people_menu_button"
        android:layout_height="@dimen/people_menu_button"
        android:layout_marginLeft="5dp"
        android:background="@drawable/selector_people_home"
        app:layout_constraintLeft_toRightOf="@id/btn_show_address"
        />

    <Button
        android:id="@+id/btn_show_family"
        android:layout_width="@dimen/people_menu_button"
        android:layout_height="@dimen/people_menu_button"
        android:layout_marginLeft="5dp"
        android:background="@drawable/selector_people_familys"
        app:layout_constraintLeft_toRightOf="@id/btn_show_work_place"
        app:layout_constraintTop_toBottomOf="@id/h1"/>

    <Button
        android:id="@+id/btn_edit_people"
        android:layout_width="@dimen/people_menu_button"
        android:layout_height="@dimen/people_menu_button"
        android:layout_marginLeft="5dp"
        android:background="@drawable/selector_people_edit"
        app:layout_constraintLeft_toRightOf="@id/btn_show_home"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_upload_photo"
        android:layout_width="@dimen/people_menu_button"
        android:layout_height="@dimen/people_menu_button"
        app:layout_constraintTop_toTopOf="@id/h1"
        app:layout_constraintLeft_toRightOf="@id/btn_show_family"
        android:layout_marginLeft="5dp"
        android:background="@drawable/selector_people_upload_photo" />

    <Button
        android:id="@+id/btn_set_home"
        android:layout_width="@dimen/people_menu_button"
        android:layout_height="@dimen/people_menu_button"
        android:layout_marginLeft="5dp"
        android:background="@drawable/selector_people_set_home"
        app:layout_constraintLeft_toRightOf="@id/btn_upload_photo"
        app:layout_constraintTop_toTopOf="@id/h1" />

    <Button
        android:id="@+id/btn_create_relation"
        android:layout_width="@dimen/people_menu_button"
        android:layout_height="@dimen/people_menu_button"
        android:layout_marginLeft="5dp"
        android:background="@drawable/selector_people_relation"
        app:layout_constraintLeft_toRightOf="@id/btn_upload_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_break_realtion"
        android:layout_width="@dimen/people_menu_button"
        android:layout_height="@dimen/people_menu_button"
        app:layout_constraintLeft_toRightOf="@id/btn_create_relation"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:background="@drawable/selector_people_break_relation" />

    <Button
        android:id="@+id/btn_del_people"
        android:layout_width="@dimen/people_menu_button"
        android:layout_height="@dimen/people_menu_button"
        app:layout_constraintTop_toTopOf="@id/h1"
        app:layout_constraintLeft_toRightOf="@id/btn_set_home"
        android:layout_marginLeft="5dp"
        android:background="@drawable/selector_people_del" />

    <android.support.constraint.Guideline
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="60dp" />
</android.support.constraint.ConstraintLayout>